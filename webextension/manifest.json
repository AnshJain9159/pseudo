{
  "manifest_version": 3,
  "name": "BroCode",
  "version": "1.0",
  "description": "A Socratic teaching assistant for LeetCode problems",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://leetcode.com/*","http://localhost:11434/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["https://leetcode.com/*"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}